<Window x:Class="FactorSADEfficiencyOptimizer.UIComponent.ShipmentsScheduled"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FactorSADEfficiencyOptimizer.UIComponent"
        mc:Ignorable="d" DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Title="ShipmentsScheduled" Height="400" Width="620">
    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="59*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.Row="0" Margin="0 0 10 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="9*"></RowDefinition>
                <RowDefinition Height="108*"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <Label FontWeight="Bold" VerticalAlignment="Bottom" Grid.Row="0">Shipments</Label>
                <Border>
                    <Button Content="Add Shipment"></Button>
                </Border>
            </StackPanel>
            <ListView x:Name="ShipmentWindowList" ItemsSource="{Binding shipments, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      SelectedItem="{Binding selected_shipment}" Margin="10,10,10,10" Grid.Row="1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                                <ColumnDefinition Width="4*"></ColumnDefinition>
                                <ColumnDefinition Width="4*"></ColumnDefinition>
                                <ColumnDefinition Width="4*"></ColumnDefinition>
                                <ColumnDefinition Width="4*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <CheckBox IsChecked="{Binding IsRecurring}" Grid.Column="0"></CheckBox>
                            <TextBox Text="{Binding Sender.Name}" Grid.Column="1"></TextBox>
                            <TextBox Text="{Binding Receiver.Name}" Grid.Column="2"></TextBox>
                            <TextBox Text="{Binding TimeToDeliver}" Grid.Column="3"></TextBox>
                            <Button Content="Check Products" Grid.Column="4"></Button>
                            <Button Content="X" Background="LightSalmon" BorderBrush="Red" BorderThickness="1"
                                    Width="{Binding Path=ActualHeight, RelativeSource={RelativeSource Mode=Self}}"
                                    Grid.Column="2"></Button>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <Button Content="Save" HorizontalAlignment="Center" Margin="0 0 10 0"
                VerticalAlignment="Center" Grid.Row="1"/>
        <Grid Grid.Column="1" Margin="10 0 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="9*"></RowDefinition>
                <RowDefinition Height="108*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0">Products</Label>
            <ListView Grid.Row="1" Margin="10" ItemsSource="{Binding products_for_shipment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      SelectedItem="{Binding selected_product}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                                <ColumnDefinition Width="3*"></ColumnDefinition>
                                <ColumnDefinition Width="3*"></ColumnDefinition>
                                <ColumnDefinition Width="3*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Text="{Binding ProductName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                            <TextBox Grid.Column="1" Text="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                            <TextBox Grid.Column="2" Text="{Binding Units, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                            <TextBox Grid.Column="3" Text="{Binding Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Window>
