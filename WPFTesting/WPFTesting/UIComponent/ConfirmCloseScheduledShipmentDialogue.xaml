<Window x:Class="FactorySADEfficiencyOptimizer.UIComponent.ConfirmCloseScheduledShipmentDialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FactorySADEfficiencyOptimizer.UIComponent"
        mc:Ignorable="d" WindowStyle="ToolWindow"
        Title="ConfirmCloseScheduledShipmentDialogue" Height="120" Width="300">
    <Border  Background="FloralWhite" BorderBrush="DimGray" BorderThickness="2" CornerRadius="3">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="10"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Save before closing?" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="20" FontWeight="DemiBold" Grid.ColumnSpan="3"></TextBlock>
            <Button Content="Yes" FontSize="16" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10 0 10 0"
                Grid.Row="1" Grid.Column="0" Padding="5 0" Click="OnYesInput_Click"></Button>
            <Button Content="No" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0 10 0"
                Grid.Row="1" Grid.Column="2" Padding="5 0" Click="OnNoInput_Click"></Button>
        </Grid>
    </Border>
</Window>
