<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Draggable Boxes" Height="450" Width="800">
    <Grid>
        
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="InfiniteCanvas" Width="10000" Height="10000" Background="LightGray">
                <!-- Boxes and lines will be added here dynamically -->
            </Canvas>
        </ScrollViewer>
        <Button Content="Add Box" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Width="100" Height="30" Margin="10" Click="AddBox_Click"/>
    </Grid>
</Window>
    
    
