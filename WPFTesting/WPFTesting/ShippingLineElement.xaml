<UserControl x:Class="WPFTesting.ShippingLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFTesting"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Delete Shipping Line" Click="DeleteShipLine_Click"/>
            </ContextMenu>
        </Grid.ContextMenu>

        <Line Stroke="Aqua" Panel.ZIndex="-10" StrokeThickness="5" X1="0" X2="100" Y1="0" Y2="100" x:Name="ourShippingLine" MouseDown="Line_MouseDown"/>

        <!-- TextBlock to show label -->
        <TextBlock Text="{Binding Label}" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   FontSize="16" 
                   FontWeight="Bold"
                   Foreground="Black" 
                   Margin="0,10,0,0"/>
    </Grid>
</UserControl>
